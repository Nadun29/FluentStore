<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net48</TargetFramework>
        <!--<MinimumPlatformVersion>10.0.17763.0</MinimumPlatformVersion>-->
        <Nullable>enable</Nullable>
        <LangVersion>9</LangVersion>
        <UseWPF>true</UseWPF>
        <Platforms>AnyCPU;x64;x86;ARM;ARM64</Platforms>

        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>true</SelfContained>
        <PublishReadyToRun>true</PublishReadyToRun>
        <ApplicationManifest>app.manifest</ApplicationManifest>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="Resources\Background.png" />
        <None Remove="Resources\Square71x71Logo.png" />
        <None Remove="Steps\S00_Welcome.xaml.cs~RF4ef5043.TMP" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Condition=" $(TargetFramework.StartsWith('net5')) " Include="Microsoft.Windows.CsWinRT" Version="1.3.3" />
        <PackageReference Include="Octokit" Version="0.50.0" />
        <PackageReference Include="WPFTaskDialog" Version="1.7.1" />
        <Resource Include="Resources\Background.png" />
        <Resource Include="Resources\Square71x71Logo.png" />

        <Compile Update="DefaultResources.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>DefaultResources.resx</DependentUpon>
        </Compile>

        <EmbeddedResource Update="DefaultResources.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>DefaultResources.Designer.cs</LastGenOutput>
        </EmbeddedResource>
    </ItemGroup>

    <PropertyGroup Condition=" '$(Platform)' == 'x86' Or '$(Platform)' == 'AnyCPU' ">
        <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Platform)' == 'x64' ">
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Platform)' == 'ARM' ">
        <RuntimeIdentifier>win-ARM</RuntimeIdentifier>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Platform)' == 'ARM64' ">
        <RuntimeIdentifier>win-ARM64</RuntimeIdentifier>
    </PropertyGroup>

</Project>
