<UserControl
    x:Class="FluentStore.Controls.DisplayModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentStore.Controls"
    xmlns:helpers="using:FluentStore.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:DefaultBindMode="OneWay"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border>
        <StackPanel>
            <TextBlock Style="{ThemeResource NavigationViewItemHeaderTextStyle}" Text="{x:Bind Title}" />
            <TextBlock Text="{x:Bind Value.ToString()}" FontWeight="ExtraLight"/>
            <ContentPresenter Content="{Binding Value}" ContentTemplateSelector="{StaticResource DefaultDisplayTemplateSelector}"
                              helpers:ContentPresenterEx.UpdateTemplateSelectorOnContentChange="True"/>
        </StackPanel>
    </Border>
</UserControl>
