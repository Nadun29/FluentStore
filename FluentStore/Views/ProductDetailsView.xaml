    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentStore.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:storeModels="using:MicrosoftStore.Models"
    xmlns:viewModels="using:FluentStore.ViewModels"
    mc:Ignorable="d">
    <Page.Resources>
        <viewModels:ProductDetailsViewModel x:Name="ViewModel" x:FieldModifier="public" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:DockPanel Background="{ThemeResource SystemControlAcrylicElementBrush}">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BackButton" Click="BackButton_Click" Style="{StaticResource NavigationBackButtonNormalStyle}" />
                <TextBlock Margin="0,0,3,0" VerticalAlignment="Center" FontSize="12" Text="Fluent Store - " />
                <TextBlock VerticalAlignment="Center" FontSize="12" Text="{x:Bind ViewModel.Product.MediaType}" />
            </StackPanel>
            <Border x:Name="TitlebarDragTarget" Background="Transparent" />
        </controls:DockPanel>

        <Image x:Name="HeroImage" Grid.Row="1" Source="{x:Bind ViewModel.GetHeroImage()}" VerticalAlignment="Top"/>

        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>

