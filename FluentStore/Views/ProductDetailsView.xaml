        </Grid.ColumnDefinitions>
        <Image Grid.RowSpan="2" Grid.ColumnSpan="2" Source="{x:Bind ViewModel.GetHeroImage()}" Stretch="UniformToFill" />
        <Grid Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" />

