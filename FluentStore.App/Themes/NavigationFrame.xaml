<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:FluentStore.Controls">

    <Style x:Key="DefaultNavigationFrameStyle" TargetType="controls:NavigationFrame">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="ContentTransitions">
            <Setter.Value>
                <TransitionCollection>
                    <ContentThemeTransition/>
                </TransitionCollection>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="controls:NavigationFrame" BasedOn="{StaticResource DefaultNavigationFrameStyle}"/>

</ResourceDictionary>
